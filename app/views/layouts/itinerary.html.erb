<!DOCTYPE html>
<html>
	<head>
		<title>MQLite - Itinerary</title>
		<%= csrf_meta_tags %>
		<link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.css"/>
		<link rel="stylesheet/less" type="text/css" href="/css/itinerary.less">
		<script src="/less-1.3.0.min.js"></script>
		<link href="http://fonts.googleapis.com/css?family=Righteous" rel="stylesheet" type="text/css">
		<%= stylesheet_link_tag  "application", :media => "all" %>
	</head>
    <body class="yui3-skin-night <%= @current_controller %>-controller <%= @current_action %>-action">
    	<div id="header">
			<h3>Mapquest Itinerary</h3>
		</div>
		<div id="content" class="itinerary-content">
	    	<div class="row-fluid">
		    	<div id="itinerary" class="span8">
		    		<div id="datesAndStops" class="row-fluid">
		    			<div class="row-fluid date date-1">
				    		<div class="span2 dateTitle">
				    			<h5>1st of June</h5>
								<a class="btn btn-primary btn-seeonmap date-1" href="#"><i class="icon-info-sign icon-white"></i> Map It!</a>
				    		</div>
				    		<div class="span10 stops">
				    			<div class="stop">
									<p>A: <span>Dublin</span></p>
									<a class="delete-link" title="Delete from itinerary" href="#"><i class="icon-trash"></i></a>
									<input type="hidden" class="stop_location" value="53.344631,-6.26318">
				    			</div>
				    			<div class="stop">
									<p>B: <span>Cavan</span></p>
									<a class="delete-link" title="Delete from itinerary" href="#"><i class="icon-trash"></i></a>
									<input type="hidden" class="stop_location" value="53.978477,-7.33855">
				    			</div>
				    		</div>
			    		</div>
			    		<div class="row-fluid date date-2">
				    		<div class="span2 dateTitle">
				    			<h5>2nd of June</h5>
								<a class="btn btn-seeonmap date-2 btn-primary" href="#"><i class="icon-info-sign icon-white"></i> Map It!</a>
				    		</div>
				    		<div class="span10 stops">
				    			<div class="stop">
									<p>A: <span>Donegal</span></p>
									<a class="delete-link" title="Delete from itinerary" href="#"><i class="icon-trash"></i></a>
									<input type="hidden" class="stop_location" value="54.654301,-8.102724">
				    			</div>
				    			<div class="stop">
									<p>B: <span>Derry</span></p>
									<a class="delete-link" title="Delete from itinerary" href="#"><i class="icon-trash"></i></a>
									<input type="hidden" class="stop_location" value="54.9942962,-7.3192079">
				    			</div>
				    			<div class="stop">
									<p>C: <span>Belfast</span></p>
									<a class="delete-link" title="Delete from itinerary" href="#"><i class="icon-trash"></i></a>
									<input type="hidden" class="stop_location" value="54.593211,-5.929104">
				    			</div>
				    		</div>
			    		</div>
			    		<div id="controls">
				    		<div id="calendar"></div>
				    		<div>
					    		<input id="addStopInput" style="display:none;"></input>
					    		<div id="itinerary-search-results-container" class="itinerarySearchResults" style="display:none;">
						    		<h4 class="selectPoiTitle">Please select a stop:</h4>
						    		<div id="itinerary-search-results">
						    		</div>
					    		</div>
					    		
						    </div>
				    		<div>
					    		<span id="addDateAndCalendar">
						    		<button id="addDay" class="btn btn-inverse"><i class="icon-plus-sign icon-white"></i>  Add Day</button>
					    		</span>
					    		<span id="addStopDiv">
					    			<button id="addStop" class="btn btn-inverse"><i class="icon-picture icon-white"></i>  Add Stop</button>
					    		</span>
				    		</div>
				    	</div>
		    		</div>
		    	</div>
	    		<div class="span4" id="map"></div>
    		</div>
		</div>
		<script src="/yui/build/yui/yui.js"></script>
		<script src="/jquery-1.7.2.min.js"></script>
		<script src="/bootstrap/js/bootstrap.js"></script>
		<script src="http://www.mapquestapi.com/sdk/js/v7.0.s/mqa.toolkit.js?key=<%= APP_CONFIG["mapquest_api_key"] %>"></script> 
    	<script src="/js/modules-config.js"></script>
		<script src="/js/mqlite-application.js"></script>
		<script src="/js/itinerary.js"></script>
		<script src="https://raw.github.com/janl/mustache.js/master/mustache.js"></script>
	</body>
</html>